<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BidderBidder" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- No Title Bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- DatePicker -->
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="android:editTextStyle">@style/customEditTextFontStyle</item>
        <item name="android:radioButtonStyle">@style/customRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/customCheckboxFontStyle</item>
        <item name="actionButtonStyle">@style/toolbarActionButtonStyle</item>
    </style>

    <style name="toolbarActionButtonStyle" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="MyDatePicker" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="productRegistrationButtonDisable" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/grey</item>
    </style>

    <style name="productRegistrationButtonEnable" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/black</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/CustomTextInputLayoutThemeOverlay</item>
        <item name="shapeAppearanceOverlay">@style/CustomTextInputLayoutShapeAppearanceOverlay</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">@color/edit_text_hint</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="CustomTextInputLayoutThemeOverlay" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="editTextStyle">@style/CustomTextInputLayoutEditTextStyle</item>
    </style>

    <style name="CustomTextInputLayoutEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <!-- Padding values that total 34dp to visually match the spec. -->
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="CustomTextInputLayoutShapeAppearanceOverlay" parent="">
        <item name="cornerSizeBottomLeft">4dp</item>
        <item name="cornerSizeBottomRight">4dp</item>
    </style>
</resources>
