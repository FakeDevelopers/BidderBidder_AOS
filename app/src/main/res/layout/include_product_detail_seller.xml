<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textview_seller_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/textview_seller_location"
        app:layout_constraintStart_toEndOf="@+id/imageview_seller_thumbnail"
        app:layout_constraintTop_toTopOf="@+id/imageview_seller_thumbnail"
        app:layout_constraintVertical_chainStyle="spread"
        tools:text="Jayden.bin" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textview_seller_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textview_seller_nickname"
        app:layout_constraintTop_toBottomOf="@id/textview_seller_nickname"
        app:layout_constraintVertical_chainStyle="spread"
        tools:text="삼평동" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageview_seller_thumbnail"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:src="@drawable/seller_cat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

</androidx.constraintlayout.widget.ConstraintLayout>
