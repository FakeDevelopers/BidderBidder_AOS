<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.fakedevelopers.bidderbidder.ui.register.UserRegistrationViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/fragment_horizontal_margin">

        <include
            android:id="@+id/include_birth_title"
            layout="@layout/include_user_registration_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/registration_title_margin_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@{@string/registration_birth_title}" />

        <TextView
            android:id="@+id/textview_birth_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/registration_birth_subtitle"
            android:textSize="@dimen/registration_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_birth_title"
            tools:ignore="SpUsage" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textinputlayout_birth"
            style="@style/TextInputLayout"
            android:layout_width="0dp"
            android:layout_height="@dimen/registration_view_height"
            android:layout_marginTop="@dimen/registration_title_margin_bottom"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/include_birth_title">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_birth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/text_input_white_background"
                android:drawableEnd="@drawable/birth_spinner"
                android:ems="10"
                android:focusable="false"
                android:hint="@string/registration_birth_hint"
                android:paddingTop="10dp"
                android:text="@{vm.birth}"
                android:textColorHint="@color/edit_text_hint"
                android:textSize="@dimen/registration_text_size"
                android:textStyle="bold"
                tools:ignore="SpUsage,TextContrastCheck" />
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
